<div class="add_dataset">
  <table width="60%">  
    <tr>
       <td><%= image_tag("inspiration_logo.png", :size => "50x50")%></td>
      <td width="10%"> <%= f.label :name %> <br/>
        <%= f.label :title %><br/>
        <span style="float: right"/><%= f.check_box :is_default %>
      </td>
      <td> <%= f.autocomplete_field :name, autocomplete_profile_ppl_inspiration_name_home_path %> <br/> 
        <%= f.autocomplete_field :title, autocomplete_profile_ppl_inspiration_title_home_path %><br/>
        <%= f.label :default %></td>
    </tr>
    <tr>
      <td><span style="text-align:left"/><%= f.label :description %></td>
    </tr>
    <tr>
      <td colspan="3"><%= f.text_area :desc, :size => "50x5" %></td>
    </tr>
    <tr>
      <td colspan="3"><span style="float: right"/>
        <%#*<button type="button" class="delete_div_btn">Remove</button>%>
        <%= link_to_remove_fields "Remove", f %>
      </td>
    </tr>
  </table>
</div>
