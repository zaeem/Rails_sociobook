<h1>Listing groups</h1>

<table>
  <tr>
    <th>Profile</th>
    <th>Name</th>
    <th>Flag privacy</th>
    <th>Flag notifications</th>
    <th>Flag chat</th>
    <th>Flag showgroup</th>
    <th>Flag email</th>
    <th>Flag sms</th>
    <th>Gphoto file name</th>
    <th>Gphoto content type</th>
    <th>Gphoto file size</th>
    <th>Gphoto updated at</th>
    <th>Desc</th>
    <th>Is default</th>
    <th>Misc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.profile_id %></td>
    <td><%= group.name %></td>
    <td><%= group.flag_privacy %></td>
    <td><%= group.flag_notifications %></td>
    <td><%= group.flag_chat %></td>
    <td><%= group.flag_showgroup %></td>
    <td><%= group.flag_email %></td>
    <td><%= group.flag_sms %></td>
    <td><%= group.gphoto_file_name %></td>
    <td><%= group.gphoto_content_type %></td>
    <td><%= group.gphoto_file_size %></td>
    <td><%= group.gphoto_updated_at %></td>
    <td><%= group.desc %></td>
    <td><%= group.is_default %></td>
    <td><%= group.misc %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

