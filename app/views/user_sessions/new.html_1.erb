<div class="content">
  <p>&nbsp;</p>
  <div class="header">
      FaceBook Login 
   </div> 
    <%= form_for @user_session, :html => {:style => "padding: 10px; align: left;"}, :url => {:action => "create"} do |f| %>
  <table width="60%">
    <%= f.error_messages %>
    <tr>
      <td><span style="text-align:right"/><%= f.label :email_or_login %></td>
      <td><%= f.text_field :login %></td>
    </tr>  
    <tr>
      <td><span style="text-align:right"/><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>  
     <tr>
      <td><span style="float:right"/><%= f.check_box :remember_me %> Remember Me</td>
      <td> <%= link_to "Forgot Password?",  new_password_reset_url%>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= f.submit "Login"%></td>
     </tr>
  </table>
<% end %>

</div>