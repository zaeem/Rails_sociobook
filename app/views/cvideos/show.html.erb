		<a
                  href="http://localhost:3000<%= @cvideo.video.url %>" style="display:block;width:520px;height:330px"
			 id="player">
		</a>
                <a
                  href="http://localhost:3000<%= @cvideo.video.url %>" style="display:block;width:520px;height:330px"
			 id="player">
		</a>

		<!-- this will install flowplayer inside previous A- tag. -->
		<script>
			flowplayer("player", "/system/player-plugin/flowplayer-3.2.7.swf", {
			clip:  {
					autoPlay: false,
					autoBuffering: false
    		}
			});
		</script>
	</div>
</body></html>

